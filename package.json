{
  "name": "stories",
  "displayName": "Stories",
  "icon": "media/ben-circle.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/benawad/vscode-stories"
  },
  "description": "Stories for VSCode",
  "publisher": "benawad",
  "version": "2.6.0",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "view/title": [
        {
          "command": "stories.refresh",
          "when": "view == storiesPanel || view == stories-full",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "stories.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "title": "Authenticate",
        "category": "Stories",
        "command": "stories.authenticate"
      },
      {
        "title": "Set Flair",
        "category": "Stories",
        "command": "stories.setFlair"
      },
      {
        "title": "Start Text Recording",
        "category": "Stories",
        "command": "stories.startTextRecording"
      },
      {
        "title": "Stop Text Recording",
        "category": "Stories",
        "command": "stories.stopTextRecording"
      },
      {
        "title": "Like Story",
        "category": "Stories",
        "command": "stories.like"
      },
      {
        "title": "Delete Story",
        "category": "Stories",
        "command": "stories.delete"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stories-icon",
          "title": "Stories",
          "icon": "media/circle-s-outline.svg"
        }
      ]
    },
    "views": {
      "stories-icon": [
        {
          "type": "webview",
          "id": "stories-full",
          "name": "Stories",
          "icon": "media/circle-s-outline.svg",
          "contextualTitle": "Stories"
        }
      ],
      "explorer": [
        {
          "type": "webview",
          "id": "storiesPanel",
          "name": "Stories"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/glob": "^7.1.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@arcsine/screen-recorder": "^0.1.6",
    "express": "^4.17.1",
    "form-data": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.1",
    "unique-names-generator": "^4.3.1"
  }
}
